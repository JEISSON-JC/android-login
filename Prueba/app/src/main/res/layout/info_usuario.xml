<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#748cdd">

        <TextView
            android:layout_width="245dp"
            android:layout_height="54dp"
            android:text="Usuario Numero:"
            android:id="@+id/lblNusuario" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:id="@+id/lblNombreUsuario"
            android:layout_weight="0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario : "
            android:id="@+id/lblNumeroUsuario"
            android:layout_weight="0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo: "
            android:id="@+id/lblCorreoUsuario"
            android:layout_weight="0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono:"
            android:id="@+id/lblTelefonoUsuario"
            android:layout_weight="0.04" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CompaÃ±ia:"
            android:id="@+id/lblCompaniaUsuario"
            android:layout_weight="0.04" />
    </LinearLayout>

</LinearLayout>